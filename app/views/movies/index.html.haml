-#  This file is app/views/movies/index.html.haml
%h1 All Movies
= form_tag movies_path, :method => :get do
  Include: 
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]"
  = submit_tag 'Refresh'
%table#movies


  %thead
    %tr
      -#change head to link for order by Tittle
      -#%th %=link_to"Movie Title", :sort =>"Tittle"
      -#     parametro a funcion     clase application.ccs amarillo     nombre link        path a mostrar
      %th{params[:sort] == "title" ? {:class => "hilite"} : {}}= link_to "Movie Title", movies_path(:sort => "title"), :id => "title_header"
      
      %th Rating
      -#change head to link for order by Release Date
      -#%th %=link_to"Release Date", :sort =>"Tittle"
      %th{params[:sort]== "release_date" ? {:class => "hilite"} : {}}= link_to "Release Date", movies_path(:sort => "release_date"), :id => "release_date_header"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path


